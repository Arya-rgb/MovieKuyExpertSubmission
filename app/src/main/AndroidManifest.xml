<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thorin.ngemovieeuy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".MyApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySportEuy">
        <activity android:name=".splashactivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailMovieActivity"
            android:label="@string/title_activity_detail_movie"
            android:theme="@style/Theme.MySportEuy.NoActionBar" />
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu">
        </activity>
    </application>

</manifest>